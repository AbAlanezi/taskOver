// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  name String
  phone Int? @unique
  email String @unique
  password String
  profile Profile?
  UserAndSessionId String
  userAndSession UserAndSession? @relation(fields: [UserAndSessionId], references: [id])
  task Task[]
}

model Profile {
  id String  @id @default(uuid())
  userId String  @unique 
  user User @relation(fields: [userId], references: [id])
}

model Task{
  id String @id @default(uuid())
  title String
  description String
  createdDate DateTime @default(now())
  userId String
  user User? @relation(fields: [userId], references: [id])
}

model Session{
  id String @id @default(uuid())
  name String
  creatorId String
  UserAndSessionId String
  userAndSession UserAndSession? @relation(fields: [UserAndSessionId], references: [id])
}
model UserAndSession{
  id String @id @default(uuid())
  session Session[]
  user User[]
}
enum Role {
  USER
  ADMIN
}
